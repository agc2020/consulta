            "hash": "541ec8185c6f5992"
          },
          {
            "kind": "inciso",
            "num": "D",
            "token": "96",
            "text": "G.M.).",
            "id": "art-18-inc-D",
            "ref": "Lei-4904-1965/art.18/inc.D",
            "hash": "7c361197355c299a"
          },
          {

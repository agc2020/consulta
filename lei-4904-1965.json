            "hash": "947a93382ea5b2ef"
          },
          {
            "kind": "inciso",
            "num": "D",
            "token": "108",
            "text": "A.).",
            "id": "art-20-inc-D",
            "ref": "Lei-4904-1965/art.20/inc.D",
            "hash": "40bfe4d3f19383aa",
            "context": [
              {
                "kind": "context",
                "num": "1",
                "token": "109",
